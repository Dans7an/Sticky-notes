<!doctype html>
<html>
<head>
    <title>My Sticky Notes</title>
    <link font-family: "Montserrat", sans-serif;
href="https://fonts.googleapis.com/css?family=McLaren|Montserrat&display=swap"
rel="stylesheet" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <header>
    <h1>My StickyNotes</h1>
  </header>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span><%= user.local.email %></h1>
        <a href="/logout" class="btn btn-default btn-lg">Logout</a>
    </div>

    <div class="row">

        <h2 class="text-center">Add a Note</h2>
      <% if (user.local.email) { %>
        <form action="/updateMessage" method="POST" class="profile">
          <input type="text" placeholder="Title" name="name" value=<%= message.name %>>
          <input type="text" placeholder="Write a Note" name="msg" value=<%= message.msg %>>
          <input type="text" name="ObjectId" style="display:none" value=<%= message._id %>>
          <button type="submit">Add</button>
        </form>
      </div>
      <% } %>
        <div class="col-sm-12">

</div>

<script src="main.js"></script>

</body>
</html>
