<!doctype html>
<html>
<head>
    <title>My Sticky Notes</title>
    <link font-family: "Montserrat", sans-serif;
href="https://fonts.googleapis.com/css?family=McLaren|Montserrat&display=swap"
rel="stylesheet" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <header>
    <h1>My StickyNotes</h1>
  </header>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span><%= user.local.email %></h1>
        <a href="/logout" class="btn btn-default btn-lg">Logout</a>
    </div>

    <div class="row">

        <h2 class="text-center">Add a Note</h2>
      <% if (user.local.email) { %>
        <form action="/messages" method="POST" class="profile">
          <input type="text" placeholder="Title" name="name">
          <input type="text" placeholder="Write a Note" name="msg">
          <button type="submit">Add</button>
        </form>
      </div>
      <% } %>
        <div class="col-sm-12">

          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message note" data-noteId="<%= messages[i]._id %>">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><i class="fa fa-edit" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>



</div>

<script src="main.js"></script>

</body>
</html>
